<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_cardview_vertical"
        android:paddingLeft="@dimen/padding_cardview_horizontal"
        android:paddingRight="@dimen/padding_cardview_horizontal">


        <!-- Foto, nombre del restaurante, calificaciÃ³n ciudad; detalles del lugar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagenPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginRight="@dimen/margin_cardview_list"/>

            </LinearLayout>


            <!-- Nombre, ubicacion-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Asadero Donde Octavio"
                    android:textColor="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steakhouse"/>

                    <io.techery.properratingbar.ProperRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:id="@+id/poper"
                        prb_defaultRating="4"
                        prb_symbolicTick="$"
                        prb_symbolicTickNormalColor="@android:color/darker_gray"
                        prb_symbolicTickSelectedColor="@android:color/holo_green_dark"
                        prb_totalTicks="5"
                        android:layout_alignBottom="@+id/text_epcialidad"

                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1mi Santa Marta, Magdalena"/>
            </LinearLayout>

        </LinearLayout>

        <!--Descripcion -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_cardview_list">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secundaryColor"
                android:text="Excelente los asados y churrascos muy buenas porciones. buena atencion "/>

         </LinearLayout>

        <!-- Nombre propietario-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/margin_cardview_list">

             <TextView
                 android:id="@+id/nameOwner"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="JUAN JOSE DURAN MEJIA"/>

         </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

    </LinearLayout>

</LinearLayout>

